extends ../layout

block content

  div.container
    if movie
      h1 Editing #{movie.title}
      form(method="POST" action="/movie/#{movie.id}")
        div.form-group
          label(for="director") Director
          input.form-control(type="text" id="director" name='director' placeholder="Director" value="#{movie.director}")
        div.form-group
          label(for="title") Title
          input.form-control(type="text" id="title" name='title' placeholder="Title" value="#{movie.title}")
        div.form-group
            label Rate this movie
            p
              input(type="radio" name="rating" value="1" checked)
              one 1 (Lame)
        div.form-group
          input(type="radio" name="rating" value="2")
          two 2
        div.form-group
          input(type="radio" name="rating" value="3")
          three 3
        div.form-group
          input(type="radio" name="rating" value="4")
          four 4 (Awesome)
        div.form-group
          label(for="description") Description
          textarea.form-control(rows="5" id='description' name='description' placeholder="Keep it brief")=movie.description
        button.btn.btn-primary(type="submit") Update
